    private async Task<IEnumerable<string>> GetHomeTown(string searchText)
    {
        var text = searchText?.ToLower();
        return await Task.FromResult(homeTownList.FindAll(town => town.ToLower().Contains(text)).OrderBy(o => o));
    }

    private void IsCheck(string gender)
    {
        entryRecord.gender = gender;
    }
    #endregion
